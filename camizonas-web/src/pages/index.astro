<script>
  // SLIDER DEL HERO
  let currentSlide = 0;
  const slides = document.querySelectorAll('.hero-slide');
  const indicators = document.querySelectorAll('.slider-indicator');
  const totalSlides = slides.length;

  function updateSlider() {
    slides.forEach((slide, index) => {
      if (index === currentSlide) {
        slide.classList.add('opacity-100', 'pointer-events-auto');
        slide.classList.remove('opacity-0', 'pointer-events-none');
      } else {
        slide.classList.add('opacity-0', 'pointer-events-none');
        slide.classList.remove('opacity-100', 'pointer-events-auto');
      }
    });

    indicators.forEach((indicator, index) => {
      if (index === currentSlide) {
        indicator.classList.remove('bg-white/50', 'w-2');
        indicator.classList.add('bg-white', 'w-8');
      } else {
        indicator.classList.remove('bg-white', 'w-8');
        indicator.classList.add('bg-white/50', 'w-2');
      }
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    updateSlider();
  }

  let autoPlayInterval = setInterval(nextSlide, 5000);

  document.getElementById('next-slide')?.addEventListener('click', () => {
    clearInterval(autoPlayInterval);
    nextSlide();
    autoPlayInterval = setInterval(nextSlide, 5000);
  });

  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => {
      clearInterval(autoPlayInterval);
      currentSlide = index;
      updateSlider();
      autoPlayInterval = setInterval(nextSlide, 5000);
    });
  });

  // B칔SQUEDA
  const searchInput = document.getElementById('search-input');
  let searchTimeout: ReturnType<typeof setTimeout>;

  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.trim();
    clearTimeout(searchTimeout);
    
    if (query.length >= 2) {
      searchTimeout = setTimeout(() => {
        window.location.href = `/catalogo?search=${encodeURIComponent(query)}`;
      }, 800);
    }
  });

  searchInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      const query = (e.target as HTMLInputElement).value.trim();
      if (query.length > 0) {
        clearTimeout(searchTimeout);
        window.location.href = `/catalogo?search=${encodeURIComponent(query)}`;
      }
    }
  });

  // ======= HELP WHATSAPP INDEX (NUEVO) =======
  (function() {
    const telefono = "50232650539";
    const helpBtn = document.getElementById('help-index-btn');
    const helpModal = document.getElementById('help-modal-index');
    const helpInput = document.getElementById('help-input-index') as HTMLTextAreaElement;
    const helpCancel = document.getElementById('help-cancel-index');
    const helpSend = document.getElementById('help-send-index');

    function openHelpModal() {
      if (helpInput) {
        helpInput.value = 'Hola, no encuentro la CAMIZONA que busco en el cat치logo. 쯄e pueden ayudar?';
      }
      helpModal?.classList.remove('hidden');
      helpModal?.classList.add('flex');
    }

    function closeHelpModal() {
      helpModal?.classList.add('hidden');
      helpModal?.classList.remove('flex');
    }

    function sendHelpWhatsApp() {
      const texto = (helpInput && helpInput.value.trim()) ? helpInput.value.trim() : 'Hola, necesito ayuda para encontrar una CAMIZONA.';
      const url = `https://wa.me/${telefono}?text=${encodeURIComponent(texto)}`;
      window.open(url, '_blank');
      closeHelpModal();
    }

    helpBtn?.addEventListener('click', openHelpModal);
    helpCancel?.addEventListener('click', closeHelpModal);
    helpSend?.addEventListener('click', sendHelpWhatsApp);

    helpModal?.addEventListener('click', (e) => {
      if (e.target === helpModal) closeHelpModal();
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && helpModal && !helpModal.classList.contains('hidden')) closeHelpModal();
    });
  })();
</script>