const versionInicial = tieneFan ? 'Fan' : 'Jugador';
const precioInicial = tieneFan ? prod.precioFan : prod.precioJugador;
const imagenesIniciales = tieneFan ? prod.imagenesFan : prod.imagenesJugador;

// ‚úÖ SEO
const productTitle = `${prod.nombre} | CamiZonas`;
const productDescription = `${prod.nombre} - Desde Q.${precioInicial}. Personalizaci√≥n gratis. Env√≠o a toda Guatemala.`;
const productImage = imagenesIniciales[0];
const productUrl = `https://camizonas.com/producto/${prod.id}`;

// ‚úÖ BREADCRUMBS
const breadcrumbs = [
  { label: prod.categoria || 'Productos', href: `/catalogo?categoria=${prod.categoria?.toLowerCase()}` },
  { label: prod.nombre, href: '#' }
];

// ‚úÖ PRODUCTOS RELACIONADOS (misma categor√≠a, excluyendo el actual)
const productosRelacionados = productos
  .filter(p => p.categoria === prod.categoria && p.id !== prod.id)
  .slice(0, 4);
