---
interface Props {
  id: string;
  name: string;
  precioFan?: number | null;
  precioJugador?: number | null;
  imagen: string;
  categoria: string;
}

const { id, name, precioFan, precioJugador, imagen, categoria } = Astro.props;

// ✅ Auto-detectar precio disponible
const precioMostrar = precioFan ?? precioJugador ?? 0;
const tieneAmbos = precioFan && precioJugador;
---

<a href={`/producto/${id}`} class="group block bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-lg hover:border-gray-200 transition-all duration-300">
  
  <!-- Imagen -->
  <div class="relative aspect-square bg-[#F4F4F4] overflow-hidden">
    {imagen ? (
      <img 
        src={imagen} 
        alt={name}
        class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-gray-300">
          <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
          <circle cx="9" cy="9" r="2"/>
          <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
        </svg>
      </div>
    )}
    
    <!-- Badge Categoría -->
    <span class="absolute top-2 left-2 bg-black/80 text-white text-[8px] sm:text-[9px] font-bold px-2 py-1 rounded-full uppercase tracking-wide backdrop-blur-sm">
      {categoria}
    </span>
  </div>

  <!-- Info -->
  <div class="p-3 sm:p-4">
    <h3 class="font-bold text-xs sm:text-sm text-gray-900 leading-tight line-clamp-2 group-hover:text-blue-600 transition-colors">
      {name}
    </h3>
    
    <div class="flex items-baseline justify-between mt-2">
      <p class="font-black text-sm sm:text-base text-black">
        Q.{precioMostrar}
      </p>
      <span class="text-[9px] sm:text-[10px] text-gray-400 font-medium uppercase">
        Desde
      </span>
    </div>
  </div>
</a>