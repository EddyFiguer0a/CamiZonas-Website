---
// filepath: c:\Users\EddyA\Escritorio\camiZona\camizonas-web\src\components\ProductCard.astro
interface Props {
  id: string;
  name?: string;
  nombre?: string;
  precioFan: number | null;
  precioJugador: number | null;
  imagen?: string;
  imagenesFan?: string[];
  imagenesJugador?: string[];
  categoria?: string;
}

const { 
  id, 
  name,
  nombre,
  precioFan, 
  precioJugador, 
  imagen,
  imagenesFan, 
  imagenesJugador,
  categoria = ''
} = Astro.props;

// ✅ COMPATIBILIDAD: Acepta "name" o "nombre"
const nombreProducto = nombre || name || 'Producto';

// ✅ COMPATIBILIDAD: Acepta "imagen" sola o arrays
const imagenFinal = imagen || imagenesFan?.[0] || imagenesJugador?.[0] || '/img/placeholder.webp';

const precioDesde = precioFan || precioJugador || 0;
const tieneAmbos = precioFan && precioJugador;
---

<a 
  href={`/producto/${id}`} 
  class="group block bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-xl hover:border-orange-300 transition-all duration-300"
>
  <!-- ✅ IMAGEN -->
  <div class="relative aspect-square bg-[#FAFAFA] overflow-hidden">
    {imagenFinal ? (
      <img 
        src={imagenFinal} 
        alt={nombreProducto}
        class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-gray-300">
          <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
          <circle cx="9" cy="9" r="2"/>
          <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
        </svg>
      </div>
    )}
    
    <!-- ✅ BADGE CATEGORÍA NEGRO -->
    {categoria && (
      <span class="absolute top-2 left-2 bg-black/80 text-white text-[8px] sm:text-[9px] font-bold px-2 py-1 rounded-full uppercase tracking-wide backdrop-blur-sm">
        {categoria}
      </span>
    )}

    <!-- OVERLAY HOVER NARANJA SUTIL -->
    <div class="absolute inset-0 bg-orange-500/0 group-hover:bg-orange-500/5 transition-colors duration-300 pointer-events-none"></div>
  </div>

  <!-- ✅ INFO CON SEPARADOR SUTIL -->
  <div class="p-3 sm:p-4">
    <!-- Nombre -->
    <h3 class="font-bold text-xs sm:text-sm text-gray-900 leading-tight line-clamp-2 group-hover:text-[#FF6B35] transition-colors duration-300">
      {nombreProducto}
    </h3>
    
    <!-- ✅ SEPARADOR SUTIL -->
    <div class="w-8 h-[2px] bg-gray-200 group-hover:bg-orange-400 group-hover:w-12 transition-all duration-300 mt-2 mb-2 rounded-full"></div>
    
    <!-- Precio con más impacto -->
    <div class="flex items-center justify-between">
      <p class="font-black text-base sm:text-lg text-black tracking-tight">
        Q.{precioDesde}
      </p>
      {tieneAmbos && (
        <span class="text-[8px] sm:text-[9px] bg-gray-100 text-gray-500 font-bold px-2 py-0.5 rounded-full uppercase">
          Desde
        </span>
      )}
    </div>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>