<script>
  document.addEventListener('astro:page-load', () => {
    document.getElementById('open-tallas-footer')?.addEventListener('click', () => {
      const modal = document.getElementById('tallas-modal');
      if (modal) { modal.classList.remove('hidden'); modal.classList.add('flex'); }
    });

    document.getElementById('open-envios-footer')?.addEventListener('click', () => {
      const modal = document.getElementById('envios-modal');
      if (modal) { modal.classList.remove('hidden'); modal.classList.add('flex'); }
    });

    document.getElementById('open-faq-footer')?.addEventListener('click', () => {
      const modal = document.getElementById('faq-modal');
      if (modal) { modal.classList.remove('hidden'); modal.classList.add('flex'); }
    });
  });
</script>